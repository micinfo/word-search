{
  "name": "word-search-games",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start:levopront": "cd packages/levopront && npm start",
    "start:kcab": "cd packages/kcab && npm start",
    "start:suganon": "cd packages/suganon && npm start",
    "build:levopront": "cd packages/levopront && npm run build",
    "build:shared": "cd packages/shared && npm run build",
    "build:kcab": "npm run build:shared && cd packages/kcab && npm run build",
    "build:suganon": "npm run build:shared && cd packages/suganon && npm run build"
  }
}